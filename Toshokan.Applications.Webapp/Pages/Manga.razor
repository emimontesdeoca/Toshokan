@page "/manga/{Id}"

<PageTitle>Toshokon → @CurrentManga?.Name</PageTitle>

<div class="page-body">

    <div class="container-xl placeholder-glow">
        <div class="row row-cards mb-3">
            <div class="col-12">
                <div class="row row-cards ">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <!-- Page pre-title -->
                            <div class="page-pretitle">
                                @if (CurrentManga == null)
                                {
                                    <div class="placeholder col-3"></div>
                                }
                                else
                                {
                                    <ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
                                        <li class="breadcrumb-item"><a href="/">Toshokan</a></li>
                                        <li class="breadcrumb-item"><a href="/library">Library</a></li>
                                        <li class="breadcrumb-item active" aria-current="page"><a href="/manga/@CurrentManga?.Id ">@CurrentManga?.Name</a></li>
                                    </ol>
                                }
                            </div>
                            <h2 class="page-title">
                                @if (CurrentManga == null)
                                {
                                    <div class="placeholder col-5 "></div>
                                }
                                else
                                {
                                    if (!CurrentManga.Processed)
                                    {
                                        <div>No data available</div>
                                    }
                                    else
                                    {
                                        @CurrentManga?.Name
                                    }

                                }
                            </h2>
                        </div>
                        <div class="col-12 col-md-auto ms-auto d-print-none">
                            <div class="btn-list">
                                <div class="dropdown">
                                    <button class="btn btn-ghost-secondary dropdown-toggle align-text-top" data-bs-toggle="dropdown" aria-expanded="true">
                                        Actions
                                    </button>

                                    @if (CurrentManga != null)
                                    {
                                        <div class="dropdown-menu dropdown-menu-end" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(-0.666667px, 39.3333px, 0px);" data-popper-placement="bottom-end">
                                            <a class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-refresh me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4" />
                                                    <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4" />
                                                </svg>

                                                Process again
                                            </a>

                                            <a class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-numbers me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M11 6h9" />
                                                    <path d="M11 12h9" />
                                                    <path d="M12 18h8" />
                                                    <path d="M4 16a2 2 0 1 1 4 0c0 .591 -.5 1 -1 1.5l-3 2.5h4" />
                                                    <path d="M6 10v-6l-2 2" />
                                                </svg>

                                                Process episodes again
                                            </a>

                                            <a class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <circle cx="12" cy="12" r="2" />
                                                    <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" />
                                                </svg>

                                                Mark all as read
                                            </a>

                                            <a class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye-off me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <line x1="3" y1="3" x2="21" y2="21" />
                                                    <path d="M10.584 10.587a2 2 0 0 0 2.828 2.83" />
                                                    <path d="M9.363 5.365a9.466 9.466 0 0 1 2.637 -.365c4 0 7.333 2.333 10 7c-.778 1.361 -1.612 2.524 -2.503 3.488m-2.14 1.861c-1.631 1.1 -3.415 1.651 -5.357 1.651c-4 0 -7.333 -2.333 -10 -7c1.369 -2.395 2.913 -4.175 4.632 -5.341" />
                                                </svg>

                                                Mark all as unread
                                            </a>

                                            @if (CurrentManga.Enabled)
                                            {
                                                <a class="dropdown-item text-yellow">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bookmark-off me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <line x1="3" y1="3" x2="21" y2="21" />
                                                        <path d="M17 17v3l-5 -3l-5 3v-13m1.178 -2.818c.252 -.113 .53 -.176 .822 -.176h6a2 2 0 0 1 2 2v7" />
                                                    </svg>

                                                    Disable
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bookmark me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2" />
                                                    </svg>

                                                    Enable
                                                </a>
                                            }

                                            @if (CurrentManga.Delete)
                                            {
                                                <a class="dropdown-item text-red">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <line x1="4" y1="7" x2="20" y2="7" />
                                                        <line x1="10" y1="11" x2="10" y2="17" />
                                                        <line x1="14" y1="11" x2="14" y2="17" />
                                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                    </svg>

                                                    Cancel delete
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item text-red">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                        <line x1="4" y1="7" x2="20" y2="7" />
                                                        <line x1="10" y1="11" x2="10" y2="17" />
                                                        <line x1="14" y1="11" x2="14" y2="17" />
                                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                    </svg>

                                                    Delete
                                                </a>
                                            }

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>
        <div class="row row-cards mb-3">
            <div class="col-sm-3 col-xs-12">
                <div class="card d-flex flex-column">
                    @if (CurrentManga == null)
                    {
                        <div class="ratio ratio-1x1 card-img-start placeholder"></div>
                    }
                    else
                    {
                        if (!CurrentManga.Processed)
                        {
                            @*<div>No data available</div>*@
                        }
                        else
                        {
                            <img src="@CurrentManga?.Poster" class="w-100 h-100 object-cover" alt="Card side image">
                        }
                    }
                </div>
            </div>

            <div class="col">
                <div class="mb-3">
                    <div class="datagrid-title">Name</div>
                    @if (CurrentManga == null)
                    {
                        <div class="placeholder placeholder-xs col-3"></div>
                    }
                    else
                    {
                        if (!CurrentManga.Processed)
                        {
                            <div>No data available</div>
                        }
                        else
                        {
                            <div class="datagrid-content">@CurrentManga?.Name</div>
                        }
                    }
                </div>
                <div class="mb-3">
                    <div class="datagrid-title">Alternative names</div>
                    <div class="datagrid-content">
                        @if (CurrentManga == null)
                        {
                            <div class="placeholder placeholder-xs col-1"></div>
                            <div class="placeholder placeholder-xs col-2"></div>
                            <div class="placeholder placeholder-xs col-1"></div>
                            <div class="placeholder placeholder-xs col-1"></div>
                        }
                        else
                        {
                            if (!CurrentManga.Processed)
                            {
                                <div>No data available</div>
                            }
                            else
                            {
                                var alternativeNames = Libraries.Shared.Utils.BadgeUtils.SplitForBadges(CurrentManga?.AlternativeName);

                                foreach (var alternativeName in alternativeNames)
                                {
                                    <span class="badge badge-outline text-azure me-1 mb-1">@alternativeName.Trim()</span>
                                }
                            }
                        }
                    </div>
                </div>
                <div class="datagrid mb-3">
                    <div class="datagrid-item">
                        <div class="datagrid-title">Authors</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-2"></div>
                                <div class="placeholder placeholder-xs col-2"></div>
                            }
                            else
                            {
                                if (!CurrentManga.Processed)
                                {
                                    <div>No data available</div>
                                }
                                else
                                {
                                    var authors = Libraries.Shared.Utils.BadgeUtils.SplitForBadges(CurrentManga?.Authors);

                                    foreach (var author in authors)
                                    {
                                        <span class="badge badge-outline text-azure me-1 mb-1">@author.Trim()</span>
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Genres</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-1"></div>
                                <div class="placeholder placeholder-xs col-1"></div>
                                <div class="placeholder placeholder-xs col-1"></div>
                                <div class="placeholder placeholder-xs col-1"></div>
                                <div class="placeholder placeholder-xs col-1"></div>

                            }
                            else
                            {
                                if (!CurrentManga.Processed)
                                {
                                    <div>No data available</div>
                                }
                                else
                                {
                                    var genres = Libraries.Shared.Utils.BadgeUtils.SplitForBadges(CurrentManga?.Genres);

                                    foreach (var genre in genres)
                                    {
                                        <span class="badge badge-outline text-azure me-1 mb-1">@genre.Trim()</span>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="datagrid mb-3">
                    <div class="datagrid-item">
                        <div class="datagrid-title">Ongoing</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-1"></div>
                            }
                            else
                            {
                                @if (CurrentManga.Status ?? false)
                                {
                                    <span class="badge badge-outline text-green me-1 mb-1">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline text-red me-1 mb-1">NO</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Created</div>

                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-4"></div>
                            }
                            else
                            {
                                @CurrentManga?.CreatedAt
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Updated</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-4"></div>
                            }
                            else
                            {
                                @CurrentManga?.UpdatedAt
                            }
                        </div>
                    </div>
                </div>
                <div class="datagrid">
                    <div class="datagrid-item">
                        <div class="datagrid-title">Enabled</div>
                        <div class="datagrid-content">

                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-2"></div>
                            }
                            else
                            {
                                @if (CurrentManga.Enabled)
                                {
                                    <span class="badge badge-outline text-green me-1 mb-1">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline text-red me-1 mb-1">NO</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Processed</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-2"></div>
                            }
                            else
                            {
                                @if (CurrentManga.Processed)
                                {
                                    <span class="badge badge-outline text-green me-1 mb-1">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline text-red me-1 mb-1">NO</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">To be deleted</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-2"></div>
                            }
                            else
                            {
                                @if (CurrentManga.Delete)
                                {
                                    <span class="badge badge-outline text-red me-1 mb-1">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline text-green me-1 mb-1">NO</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Process directly</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-2"></div>
                            }
                            else
                            {
                                @if (CurrentManga.ProcessDirectly)
                                {
                                    <span class="badge badge-outline text-secondary me-1 mb-1">YES</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline text-secondary me-1 mb-1">NO</span>
                                }
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Interval</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-4"></div>
                            }
                            else
                            {
                                <div>
                                    @CurrentManga?.Interval hour(s)
                                </div>
                            }
                        </div>
                    </div>
                    <div class="datagrid-item">
                        <div class="datagrid-title">Next episode check</div>
                        <div class="datagrid-content">
                            @if (CurrentManga == null)
                            {
                                <div class="placeholder placeholder-xs col-4"></div>
                            }
                            else
                            {
                                @CurrentManga?.NextCheck
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row row-cards mb-3">
            <div class="col">
                <div class="mb-3">
                    <div class="datagrid-title">Summary</div>
                    <div class="datagrid-content">
                        @if (CurrentManga == null)
                        {
                            <div class="placeholder placeholder col-4"></div>
                            <br />
                            <br />
                            <div class="placeholder placeholder-xs col-4"></div>
                            <br />
                            <div class="placeholder placeholder-xs col-3"></div>
                            <br />
                            <div class="placeholder placeholder-xs col-5"></div>
                            <br />
                            <div class="placeholder placeholder-xs col-6"></div>
                            <br />
                            <div class="placeholder placeholder-xs col-2"></div>
                            <br />
                            <div class="placeholder placeholder-xs col-5"></div>
                        }
                        else
                        {
                            if (!CurrentManga.Processed)
                            {
                                <div>No data available</div>
                            }
                            else
                            {
                                @CurrentManga?.Summary
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cards mb-3">
            <div class="col">
                <div class="mb-3">
                    <div class="datagrid-title mb-2">Episodes</div>

                    <div class="card" style="max-height: 28rem">
                        <div class="card-body card-body-scrollable card-body-scrollable-shadow">
                            <div class="divide-y">
                                @if (this.Episodes == null)
                                {
                                    for (var i = 0; i < 10; i++)
                                    {
                                        <div>
                                            <div class="row">
                                                <div class="col-auto">
                                                    <span class="avatar">@i</span>
                                                </div>
                                                <div class="col">
                                                    <div class="text-truncate">
                                                        <div class="placeholder placeholder col-8"></div>
                                                    </div>
                                                    <div class="placeholder placeholder-xs col-5"></div>
                                                </div>
                                                <div class="col-auto align-self-center">
                                                    <div class="badge bg-secondary"></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    if (this.Episodes.Count > 0)
                                    {
                                        foreach (var item in this.Episodes)
                                        {
                                            <div>
                                                <div class="row">

                                                    <div class="col-auto">
                                                        @if (item.Queued && !item.Processed)
                                                        {
                                                            <span class="avatar bg-yellow-lt">@item.Order</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="avatar @(item.Processed ? "bg-green-lt":"bg-red-lt")">@item.Order</span>
                                                        }

                                                    </div>

                                                    <div class="col">
                                                        <a href="/episode/@item.Id">
                                                            <div class="text-truncate text-reset ">
                                                                @item.Name
                                                            </div>
                                                        </a>
                                                        <small class="text-muted text-uppercase">@item.CreatedAt</small>
                                                    </div>
                                                    <div class="col-auto align-self-center">
                                                        @if (!item.Read && item.Processed)
                                                        {
                                                            <span class="status-dot status-dot-animated bg-blue d-block"></span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="empty">
                                            <p class="empty-title">No results found</p>
                                            <p class="empty-subtitle text-muted">
                                                There are no episodes.
                                            </p>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




