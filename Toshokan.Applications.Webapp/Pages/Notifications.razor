@page "/notifications"

<PageTitle>Toshokon → Notifications</PageTitle>

<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <div class="page-pretitle">
                    Notifications
                </div>
                <h2 class="page-title">
                    Latest 50 notifications
                </h2>
            </div>
            <div class="col-12 col-md-auto ms-auto d-print-none">
                <div class="btn-list">

                    <button class="btn btn-red d-none d-sm-inline-block" @onclick="DeleteNotifications">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <line x1="4" y1="7" x2="20" y2="7" />
                            <line x1="10" y1="11" x2="10" y2="17" />
                            <line x1="14" y1="11" x2="14" y2="17" />
                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                        </svg>
                        Delete notifications
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="row row-cards">
                    <div class="col-12">
                        <div class="card">
                            <div class="list-group list-group-flush list-group-hoverable overflow-auto">

                                @if (this.NotificationsList == null)
                                {
                                    for (var i = 0; i < 10; i++)
                                    {
                                        <div class="list-group-item placeholder-glow">
                                            <div class="row align-items-center">
                                                <div class="col text-truncate">
                                                    <a href="#" class="text-reset d-block">
                                                        <div class="placeholder placeholder-xs col-6"></div>
                                                    </a>
                                                    <div class="d-block text-muted text-truncate mt-n1">
                                                        <div class="placeholder placeholder-xs col-2"></div>
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="placeholder placeholder-xs col-10"></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    @if (this.NotificationsList.Count > 0)
                                    {
                                        foreach (var item in this.NotificationsList)
                                        {
                                            <div class="list-group-item">
                                                <div class="row align-items-center">
                                                    <div class="col text-truncate">
                                                        <a href="#" class="text-reset d-block">@item.Message</a>
                                                        <div class="d-block text-muted text-truncate mt-n1">@item.CreatedAt</div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <a href="@item.Link" class="">
                                                            <!-- Download SVG icon from http://tabler-icons.io/i/star -->
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-external-link" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                                <path d="M11 7h-5a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-5" />
                                                                <line x1="10" y1="14" x2="20" y2="4" />
                                                                <polyline points="15 4 20 4 20 9" />
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    }
                                    else
                                    {
                                        <div class="empty">
                                            <p class="empty-title">No results found</p>
                                            <p class="empty-subtitle text-muted">
                                                There are no notifications.
                                            </p>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


